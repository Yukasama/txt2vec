{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Lint",
      "type": "shell",
      "command": "ruff check .",
      "group": "build"
    },
    {
      "label": "Run Lint Fix",
      "type": "shell",
      "command": "ruff check . --fix",
      "group": "build"
    },
    {
      "label": "Run Format",
      "type": "shell",
      "command": "ruff format .",
      "group": "build"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pytest",
      "group": "test"
    }
  ]
}
